 debug = false

[Dimensions]
 ntheta = 1             # number of points along field line (theta) per 2pi segment    
 nperiod = 1            # number of 2pi segments along field line is 2*nperiod-1
 ny = 1024              # number of (de-aliased) fourier modes in y
 nx = 1024              # number of (de-aliased) fourier modes in x

 nhermite = 2           # number of hermite moments (v_parallel resolution)
 nlaguerre = 1          # number of laguerre moments (mu B resolution)
 nspecies = 1           # number of evolved kinetic species

[Domain]
 y0 = 1.0               # controls box length in y (in units of rho_ref) and minimum ky, so that ky_min*rho_ref = 1/y0 
 x0 = 1.0
 boundary = "linked"    # use twist-shift boundary conditions along field line

[Physics]
 nonlinear_mode = true         # this is a linear calculation

[KREHM]
 krehm = true   # set to true to use the KREHM model
 rho_i = 0.02   # ion gyroradius, normalized to L_perp
 d_e = 0.02     # electron skin depth, normalized to L_perp
 eta = 0.0      # electron-ion collision frequency, normalized to tau_A. For this nu_ei, S=Infinity
 zt = 1.0       # (Z_i/e)*(T_i0/T_e0)
 periodic_equilibrium = true #Sets the Periodic Apar Phi=Phi_0 cos(k0x)cos(k0y)
 k0 = 10

[Time]
 scheme = "rk3"       # use RK3 timestepping scheme
 t_max = 50.0
 cfl = 0.9            # timestep stability safety factor
 dt = 1.0             # maximum dt

[Initialization]
 init_field = "upar"          # initial condition set in density
 init_amp = 1e-3              # amplitude of initial condition

[Geometry]
 igeo = 0               # use analytical geometry specification (s-alpha or slab)
 slab = true            # use slab geometry
 shat = 1.0e-8          # magnetic shear

# it is okay to have extra species data here; only the first nspecies elements of each item are used

[species]
 z     = [ 1.0,      -1.0     ]         # charge (normalized to Z_ref)
 mass  = [ 1.0,       5.447e-4 ]        # mass (normalized to m_ref)
 dens  = [ 1.0,       1.0     ]         # density (normalized to dens_ref)
 temp  = [ 1.0,       1.0     ]         # temperature (normalized to T_ref)
 tprim = [ 0.0,       0.0     ]         # temperature gradient, L_ref/L_T
 fprim = [ 0.0,       0.0     ]         # density gradient, L_ref/L_n
 vnewk = [ 0.0,       0.0     ]         # collision frequency
 type  = [ "ion",  "electron" ]         # species type


[Dissipation]
 closure_model = "none"          # no closure assumptions (just truncation)
 hyper = true
 p_hyper = 3
 D_hyper = 1.0
 hypercollisions = false          # use hypercollision model
 p_hyper_m = 10                   # exponent of hermite hypercollisions

[Diagnostics]
 nwrite = 50                            # write diagnostics every 10 timesteps
 omega = false                          # compute and write growth rates and frequencies
 free_energy = true
 fields = true


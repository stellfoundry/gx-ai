 debug = false

[Dimensions]
 ntheta = 64           # number of points along field line (theta) per 2pi segment    
 nperiod = 1            # number of 2pi segments along field line is 2*nperiod-1
 ny = 96                # number of real-space grid-points in y
 nx = 128               # number of real-space grid-points in x

 nhermite = 16          # number of hermite moments (v_parallel resolution)
 nlaguerre = 4          # number of laguerre moments (mu B resolution)
 nspecies = 1           # number of evolved kinetic species (adiabatic electrons don't count towards nspecies)

[Domain]
 y0 = 15.0              # controls box length in y (in units of rho_ref) and minimum ky, so that ky_min*rho_ref = 1/y0 
 boundary = "linked"    # use twist-shift boundary conditions along field line
 jtwist = 1

[Physics]
 beta = 1e-3                     # reference normalized pressure, beta = n_ref T_ref / ( B_ref^2 / (8 pi))
 nonlinear_mode = true           # this is a nonlinear calculation
 ei_colls = false                # turn off electron-ion collisions

[Time]
 dt = 0.1              # timestep size (in units of L_ref/vt_ref)
 nstep = 100
 #t_max = 200.0
 cfl = 1.0
 scheme = "rk3"       # use SSPx3 timestepping scheme

[Initialization]
 random_init = true
 random_seed = 22
 init_field = "all"          # initial condition set in density
 init_amp = 1.0e-2               # amplitude of initial condition

[Geometry]
 geo_option = "s-alpha"          # use s-alpha analytical model geometry
 eps = 0.18                      # inverse aspect ratio of flux surface, r/R
 Rmaj = 2.77778                  # major radius of center of flux surface, normalized to L_ref
 qinp = 1.4                      # safety factor
 shat = 0.8                      # magnetic shear
 shift = 0.0                     # shafranov shift

# it is okay to have extra species data here; only the first nspecies elements of each item are used
[species]
 z     = [ 1.0,      -1.0     ]         # charge (normalized to Z_ref)
 mass  = [ 1.0,       2.7e-4  ]         # mass (normalized to m_ref)
 dens  = [ 1.0,       1.0     ]         # density (normalized to dens_ref)
 temp  = [ 1.0,       1.0     ]         # temperature (normalized to T_ref)
 tprim = [ 2.49,      2.49    ]        # temperature gradient, L_ref/L_T
 fprim = [ 0.8,       0.8     ]         # density gradient, L_ref/L_n
 vnewk = [ 0.000167,  0.01    ]         # collision frequency
 type  = [ "ion",  "electron" ]         # species type

[Dissipation]
 closure_model = "none"          # no closure assumptions (just truncation)
 hypercollisions = true          # use hypercollision model

 hyper = true                    # use hyperdiffusion
 D_hyper = 0.05                  # coefficient of hyperdiffusion
 p_hyper = 2                     # exponent of hyperdiffusion is 2*p_hyper = 4

[Restart]
 restart = false
 save_for_restart = false

[Diagnostics]
 nwrite = 100                   # write diagnostics every nwrite timesteps
 free_energy = true             # compute and write free energy spectra (Wg, Wphi, Phi**2)
 fluxes = true                  # compute and write flux spectra (Q, Gamma)
 fields = true                  # write fields on the grid
 moments = true                 # write moments on the grid

